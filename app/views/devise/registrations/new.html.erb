<section class="main-section">
<h2 class="header" >REGISTER</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Full name", required: true %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", required: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password", minlength: 6 %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm password" , required: true %>
  </div>

  <div class="actions">
    <%= f.submit "SIGN UP" %>
  </div>
<% end %>
<div class="links-wrapper"><%= render "devise/shared/links" %></div>

</section>